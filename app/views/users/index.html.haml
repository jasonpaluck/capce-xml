- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:firstname)
      %th= model_class.human_attribute_name(:lastname)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:last_sign_in_at)
      %th= model_class.human_attribute_name(:active)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @users.each do |user|
      %tr
        %td= user.firstname
        %td= user.lastname
        %td= user.email
        %td= user.last_sign_in_at.in_time_zone.strftime("%m/%d/%Y at %I:%M%p") if user.last_sign_in_at.present?
        %td= user.active? ? 'Yes' : 'No'
        %td
          = link_to "Edit", edit_user_path(user), :class => 'btn btn-default btn-xs'

= link_to t('.new', :default => t("helpers.links.new")), new_user_path, :class => 'btn btn-primary'
