= form_for @user, html: { class: "form form-horizontal user" } do |f|
  .form-group
    = f.label :firstname, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :firstname, class: 'form-control', required: true
      = f.error_span(:firstname)
  .form-group
    = f.label :lastname, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :lastname, class: 'form-control', required: true
      = f.error_span(:lastname)
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, class: 'form-control', required: true
      = f.error_span(:email)
  .form-group
    = f.label :password, class: 'control-label col-lg-2'
    .col-lg-10
      = f.password_field :password, class: 'form-control'
      = f.error_span(:password)
  .form-group
    = f.label :password_confirmation, class: 'control-label col-lg-2'
    .col-lg-10
      = f.password_field :password_confirmation, class: 'form-control'
      = f.error_span(:password_confirmation)
  .form-group
    = f.label :active, class: 'control-label col-lg-2'
    .col-lg-10
      = f.check_box :active, class: 'form-control'
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'
