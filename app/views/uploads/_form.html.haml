= form_for @upload, html: { class: "form form-horizontal upload" } do |f|
  .form-group
    = f.label :user_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :user_id, class: 'form-control', required: true
    = f.error_span(:user_id)
  .form-group
    = f.label :upload_url, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :upload_url, class: 'form-control', required: true
    = f.error_span(:upload_url)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), uploads_path, :class => 'btn btn-default'
